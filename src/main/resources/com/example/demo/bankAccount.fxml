<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.TextFlow?>
<?import com.example.demo.LoggedinController?>

<VBox fx:id="bankAccountView" xmlns="http://javafx.com/javafx/16"
      fx:controller="com.example.demo.BankAccountController"
      xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@bankaccount.css"
      prefHeight="661.0"
      prefWidth="1200.0"
      spacing="20">

    <styleClass>bank-account-container</styleClass> <!-- Apply CSS styling for customization -->

    <children>
        <!-- Header Section -->
        <HBox alignment="TOP_RIGHT" spacing="20">
            <Button fx:id="backToBankButton" text="Back to Bank" onAction="#navigateBackToBank" styleClass="header-button"/>
        </HBox>
        <HBox alignment="TOP_RIGHT" spacing="20">
            <Button fx:id="backToLandingPageButton" text="Back to Landing Page" onAction="#navigateBackToLandingPage" styleClass="header-button"/>
        </HBox>
        <!-- Bank Selection Section -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Bank Account Information" styleClass="header-label"/>
            <!-- <Label text="Select a Bank" styleClass="section-label"/> -->
            <ComboBox fx:id="bankSelectionComboBox" promptText="Select a Bank" styleClass="combo-box"/>
        </VBox>

        <!-- Bank Account List Section -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Available Bank Accounts" styleClass="section-label"/>
            <ListView fx:id="bankListView" styleClass="list-view"/>
        </VBox>
        <!-- Bank Account Actions Section -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="createBankAccountButton" text="Create Account" onAction="#createNewBankAccount" styleClass="action-button"/>
            <Button fx:id="deleteBankButton" text="Delete Account" onAction="#deleteSelectedBank" styleClass="action-button"/>
            <Button fx:id="depositButton" text="Deposit" onAction="#depositMoney" styleClass="action-button"/>
            <Button fx:id="withdrawButton" text="Withdraw" onAction="#withdrawMoney" styleClass="action-button"/>
            <Button fx:id="showBalanceButton" text="Show Balance" onAction="#showBalance" styleClass="action-button"/>
        </HBox>
    </children>
</VBox>